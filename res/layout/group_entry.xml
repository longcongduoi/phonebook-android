
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:id="@+id/groupEntry"
	android:layout_height="fill_parent">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="TextView"
		android:layout_alignParentTop="true" android:id="@+id/groupName"
		android:textAppearance="?android:attr/textAppearanceLarge"></TextView>

	<TextView android:layout_width="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge" 
		android:layout_height="wrap_content" 
		android:layout_toRightOf="@+id/groupName" 
		android:id="@+id/countLeftBracket"
		android:paddingLeft="3dip" 
		android:text="@string/left_brace"></TextView>

	<TextView android:id="@+id/groupCount" android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/countLeftBracket"
		android:textAppearance="?android:attr/textAppearanceLarge"></TextView>

	<TextView android:layout_width="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge" 
		android:layout_height="wrap_content" 
		android:layout_toRightOf="@+id/groupCount" 
		android:id="@+id/countRightBracket"
		android:text="@string/right_brace"></TextView>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_below="@+id/groupName"
		android:text="@string/empty"
		android:id="@+id/groupOwner"></TextView>

	<ImageView android:id="@+id/sharing_with_icon"
		android:scaleType="fitStart" android:layout_height="20dip"
		android:layout_width="20dip" 
		android:layout_below="@+id/groupName"
		android:layout_toRightOf="@+id/groupOwner"></ImageView>


	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:id="@+id/sharing_with" 
		android:layout_below="@+id/groupName"
		android:layout_toRightOf="@+id/sharing_with_icon"
		android:paddingRight="10dip"></TextView>
		
		 <!-- <CheckBox android:text="" 
	android:id="@+id/check" 
	android:layout_width="20dip" 
	android:layout_height="20dip" android:layout_alignBottom="@+id/sharing_with_icon" android:layout_alignParentRight="true"></CheckBox>  
     -->
  
</RelativeLayout>
