<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/addContactsLayout">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:orientation="vertical">

		<ListView android:id="@android:id/list"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:fastScrollEnabled="true"></ListView>

		<TextView android:id="@android:id/empty"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:text="@string/no_contacts_to_add" android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:id="@+id/linearlayout1">
		<Button android:id="@+id/add_contact_button"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:text="@string/add_selected_contacts"/>

	</LinearLayout>
</LinearLayout>
